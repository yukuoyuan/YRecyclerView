<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/ll_y_recycleview_head_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_y_recycleview_head_refresh_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉刷新" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_y_recycleview_head_refresh_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/ll_y_recycleview_head_text"
            android:src="@drawable/arrow_down" />

        <yuan.kuo.yu.load.CircleLoadingView
            android:id="@+id/pb_y_recycleview_head_refresh_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/ll_y_recycleview_head_text"
            android:visibility="invisible"
            app:progress_color="#49ff0000" />
    </RelativeLayout>
</LinearLayout>